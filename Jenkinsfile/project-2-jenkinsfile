pipeline {
    agent any
    tools{
        maven 'maven-v3.8.1' // get it from global tool
    }
    stages {
        stage('passed') {
            steps {
                script{
                    echo 'building application'
                }
            }
        }
        stage('Build image') {
            steps {
                script{
                    echo 'building docker image'
                    withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'PASS', usernameVariable: 'USER')]){
                        sh 'cd train-schedule/ && docker build -t dzhovid/train-schedule:v3 .'
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh 'docker push dzhovid/train-schedule:v3'
                    }
                }
            }
        }
        stage('SSH and Deploy') {
            steps {
                script{
                    echo 'deploying application ...'
                    sh 'ssh -o "StrictHostKeyChecking no" ec2-user@54.221.153.214'
                    sh 'sudo docker run -d -p 8095:8080 dzhovid/train-schedule:v2'
                }
            }
        }

    }
}